<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lost_pet_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lost_pet_pic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="@dimen/editText_margin"
            android:src="@drawable/ic_tyndr"
            android:padding="@dimen/editText_margin" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lost_pet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_pink"
                android:gravity="center"
                android:padding="@dimen/editText_margin"
                android:text="@string/app_name"
                android:textColor="@color/svartur"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/lost_pet_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/textview_pink"
                android:padding="@dimen/editText_margin"
                android:text="@string/app_name"
                android:textColor="@color/svartur" />

            <TextView
                android:id="@+id/lost_pet_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_pink"
                android:padding="@dimen/editText_margin"
                android:text="@string/app_name"
                android:textColor="@color/svartur" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>