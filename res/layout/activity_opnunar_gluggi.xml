<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="16dp"
            android:text="@string/upplysingar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <Button
                android:id="@+id/tynt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="tynt"
                android:text="@string/tynt"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/fundid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="fundid"
                android:text="@string/fundid"
                android:layout_margin="@dimen/button_margin"/> />

            <Button
                android:id="@+id/skodaAuglysingar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="auglysingar"
                android:text="@string/skodaAuglysingar"
                android:layout_margin="@dimen/button_margin"/> />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/drawer_navigator"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#e6e6e6"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>