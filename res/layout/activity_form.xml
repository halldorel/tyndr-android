
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FormScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mynd"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="false"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nafnLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nafnLabel" />

                <EditText
                    android:id="@+id/nafn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_margin="@dimen/editText_margin" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tegundLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tegundLabel"/>

                <Spinner
                    android:id="@+id/tegund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

           </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tegundLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kynLabel"/>

                <Spinner
                    android:id="@+id/kyn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
             </LinearLayout>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tegundLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/undirtegundLabel"/>

                <Spinner
                    android:id="@+id/undirtegund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
             </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aldurLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aldurLabel"/>

                <EditText
                    android:id="@+id/aldur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_margin="@dimen/editText_margin"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dagsetningLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tyndistLabel"/>

                <EditText
                    android:id="@+id/dagsetning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tÃ½nidist dags"
                    android:layout_margin="@dimen/editText_margin"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/harLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feldurLabel"/>

            <Spinner
                android:id="@+id/feldur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/harLiturLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/liturLabel"/>

            <Spinner
                android:id="@+id/litur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        
               	<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:orientation="vertical">

	                <TextView
	                    android:id="@+id/lysingLabel"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="@string/lysingLabel" />
	
	                <EditText
	                    android:id="@+id/lysing"
	                    android:layout_width="match_parent"
	                    android:inputType="textMultiLine"
	                    android:layout_height="wrap_content"
	                    android:maxLines="10"
	                    android:lines="8"
	                    android:gravity="top|start"
	                    android:layout_margin="@dimen/editText_margin"> 
	                </EditText>
            </LinearLayout>


        <Button
            android:id="@+id/skra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/skra"
            android:onClick="skra"
            android:layout_margin="@dimen/button_margin"/>
    </LinearLayout>

</ScrollView>